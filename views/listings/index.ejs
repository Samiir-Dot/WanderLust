
<% layout("/layouts/boilerplate.ejs") %>

<style>
  body {
    overflow-x: hidden;
  }

  /* FILTER CONTAINER */
  .filters-container {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    width: 100%;
    /* margin-top: 0.5rem; */
    position: relative;
  }

  /* SCROLLABLE WRAPPER */
  .filters-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background-color: white;
    max-width: 1300px;
  }

  #filters {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-behavior: smooth;
    gap: 1.8rem;
    padding: 0.8rem 1.5rem;
    scrollbar-width: none;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    text-align: center;
    opacity: 0.8;
    flex: 0 0 auto;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .filter:hover {
    opacity: 1;
    transform: scale(1.05);
    transition: 0.2s ease;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.3rem;
  }

  /* TAX SWITCH STYLE */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    white-space: nowrap;
    background: #fff;
  }

  /* FADING EFFECT */
  .filters-wrapper::after,
  .filters-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    width: 40px;
    height: 100%;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 2;
  }

  .filters-wrapper::after {
    right: 0;
    background: linear-gradient(to left, rgba(255, 255, 255, 0.95), transparent);
    opacity: var(--scroll-indicator-opacity, 1);
  }

  .filters-wrapper::before {
    left: 0;
    background: linear-gradient(to right, rgba(255, 255, 255, 0.95), transparent);
    opacity: var(--left-fade-opacity, 0);
  }

  /* RESPONSIVE: desktop vs mobile */
  .mobile-only {
    display: none;
  }
  .desktop-only {
    display: flex;
    margin-left: 1rem;
  }

  @media (max-width: 768px) {
    .filters-container {
      flex-direction: column;
      align-items: stretch;
      gap: 0;
    }

    .filters-wrapper {
      overflow: visible;
    }

    #filters {
      padding: 0.8rem 0.8rem 0.8rem 1rem;
      gap: 1.2rem;
      overflow-x: auto;
    }

    .desktop-only {
      display: none;
    }

    .mobile-only {
      display: flex;
      align-self: flex-start;
      margin: 0.5rem 1rem;
      border-radius: 1.5rem;
      border: 1px solid #aaa;
      height: auto;
      padding: 0.6rem 1rem;
    }
  }

  /* ACTIVE FILTER */
  .active-filter {
    opacity: 1 !important;
    border-bottom: 3px solid #fe424d;
    padding-bottom: 0.4rem;
    color: #fe424d;
    font-weight: 600;
    transition: all 0.2s ease;
  }
</style>

<!-- === FILTER BAR === -->
<div class="filters-container">
  <div class="filters-wrapper">
    <div id="filters">
      <% const qSearch = search ? `&search=${encodeURIComponent(search)}` : ''; %>

      <a href="/listings?category=Trending<%= qSearch %>" class="filter <%= category === 'Trending' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div><p>Trending</p>
      </a>

      <a href="/listings?category=Rooms<%= qSearch %>" class="filter <%= category === 'Rooms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div><p>Rooms</p>
      </a>

      <a href="/listings?category=Iconic Cities<%= qSearch %>" class="filter <%= category === 'Iconic Cities' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic Cities</p>
      </a>

      <a href="/listings?category=Amazing pools<%= qSearch %>" class="filter <%= category === 'Amazing pools' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing pools</p>
      </a>

      <a href="/listings?category=Mountains<%= qSearch %>" class="filter <%= category === 'Mountains' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p>
      </a>

      <a href="/listings?category=Castles<%= qSearch %>" class="filter <%= category === 'Castles' ? 'active-filter' : '' %>">
        <div><i class="fa-brands fa-fort-awesome"></i></div><p>Castles</p>
      </a>

      <a href="/listings?category=Camping<%= qSearch %>" class="filter <%= category === 'Camping' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-campground"></i></div><p>Camping</p>
      </a>

      <a href="/listings?category=Farms<%= qSearch %>" class="filter <%= category === 'Farms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-cow"></i></div><p>Farms</p>
      </a>

      <a href="/listings?category=Arctic<%= qSearch %>" class="filter <%= category === 'Arctic' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p>
      </a>

      <a href="/listings?category=Dome<%= qSearch %>" class="filter <%= category === 'Dome' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-igloo"></i></div><p>Dome</p>
      </a>

      <a href="/listings?category=Boats<%= qSearch %>" class="filter <%= category === 'Boats' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-ship"></i></div><p>Boats</p>
      </a>

      <!-- Tax switch for mobile -->
      <div class="tax-toggle mobile-only">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" id="taxSwitchMobile">
          <label class="form-check-label" for="taxSwitchMobile">Display total after taxes</label>
        </div>
      </div>
    </div>
  </div>

  <!-- Tax switch for desktop -->
  <% if (allListings.length > 0) { %>
    <div class="tax-toggle desktop-only">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" id="taxSwitchDesktop">
        <label class="form-check-label" for="taxSwitchDesktop">Display total after taxes</label>
      </div>
    </div>
  <% } %>
</div>



<% if ((search || category) && allListings.length > 0) { %>
  <p class="text-center mt-3">
    <% if (search && category) { %>
      Showing results for "<%= search %>" in "<%= category %>"
    <% } else if (search) { %>
      Showing results matching "<%= search %>"
    <% } else if (category) { %>
      Showing "<%= category %>" listings
    <% } %>
    <a href="/listings" class="btn-filter-top ms-2">Clear Filters</a>
  </p>
<% } %>


<!-- LISTINGS GRID -->
<% if (allListings.length > 0) { %>
  <!-- LISTINGS GRID -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
    <% for (list of allListings) { %>
      <a href="/listings/<%= list._id %>" class="listing-link">
        <div class="card col listing-card index-card">
          <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= list.title %></b><br>
              &#8377; <%= list.price.toLocaleString("en-IN") %> / night
              &nbsp;&nbsp;<i class="taxInfo" style="display: none;">+&#8377;<%= list.price * 0.18 %> GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

<% } else { %>

  <!-- ✅ NO RESULTS FOUND CARD -->
<div class="no-results d-flex flex-column align-items-center justify-content-center text-center py-5">
  <img src="/images/noresults.png" alt="No Results" width="100" class="mb-4 opacity-75">
  <h5 class="fw-semibold">No results found</h5>
  <p class="text-muted mb-4">
    <% if (search && category) { %>
      No listings match your search for "<b><%= search %></b>" in category "<b><%= category %></b>".
    <% } else if (search) { %>
      No listings match your search for "<b><%= search %></b>".
    <% } else { %>
      We couldn’t find any listings right now.
    <% } %>
  </p>
  <a href="/listings" class="btn btn-outline-dark rounded-pill px-4 py-2">
    Clear filters and try again
  </a>
</div>


<% } %>

<script>
const taxSwitches = document.querySelectorAll("#taxSwitchDesktop, #taxSwitchMobile");
taxSwitches.forEach(sw => {
  sw?.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName("taxInfo");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
});



document.addEventListener("DOMContentLoaded", () => {
  const wrapper = document.querySelector(".filters-wrapper");
  const filters = document.querySelector("#filters");

  if (!filters || !wrapper) return;

  const updateFadeVisibility = () => {
    const maxScroll = filters.scrollWidth - filters.clientWidth;
    const scrollLeft = filters.scrollLeft;

    // if near the left edge
    const atStart = scrollLeft <= 5;
    // if near the right edge
    const atEnd = scrollLeft >= maxScroll - 5;

    // right fade (disappears when fully right)
    wrapper.style.setProperty("--scroll-indicator-opacity", atEnd ? "0" : "1");
    // left fade (appears when scrolled right)
    wrapper.style.setProperty("--left-fade-opacity", atStart ? "0" : "1");
  };

  // initial check
  updateFadeVisibility();

  // update on scroll or resize
  filters.addEventListener("scroll", updateFadeVisibility);
  window.addEventListener("resize", updateFadeVisibility);
});

</script>