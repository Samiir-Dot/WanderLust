<style>
/* --- Search Bar Styling --- */
.search-bar {
  gap: 0.5rem;
}

.search-input {
  border-radius: 25px;
  padding: 0.6rem 1rem;
  font-size: 1rem;
  flex: 1;
  border: 1px solid #ddd;
  transition: box-shadow 0.2s ease;
}

.search-input:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.2);
  border-color: #fe424d;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.4rem;
  color: white;
  background-color: #fe424d;
  border-radius: 25px;
  padding: 0.6rem 1.5rem;
  font-weight: 500;
  border: none;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.search-btn:hover {
  background-color: #ff5b67;
  color: white;
  transform: translateY(-1px);
}

.search-btn i {
  font-size: 0.9rem;
}

.search-text {
  font-size: 1rem;
}

/* Mobile adjustments */
@media (max-width: 576px) {
  .search-input {
    width: 100%;
    font-size: 0.9rem;
  }
  .search-btn {
    padding: 0.6rem 1rem;
    font-size: 0.9rem;
  }
}
</style>

<%
  let searchValue;
  try { searchValue = search; } catch (err) { searchValue = ''; }

  let categoryValue;
  try { categoryValue = category; } catch (err) { categoryValue = ''; }
%>


<!-- DESKTOP NAVBAR -->
<nav class="navbar navbar-expand-md bg-body-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>

    <!-- Hamburger -->
    <button class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#mainNavCollapse"
      aria-controls="mainNavCollapse"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Desktop Navbar -->
    <div class="collapse navbar-collapse d-none d-md-flex" id="mainNavCollapseDesktop">
      <!-- Left -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Center: Search Bar -->
    <form class="d-flex align-items-center mx-auto search-bar" role="search" action="/listings" method="GET">
      <input name="search" class="form-control search-input" type="search" placeholder="Search destinations" value="<%= search %>">
      <% if (categoryValue) { %>
        <input type="hidden" name="category" value="<%= categoryValue %>">
      <% } %>
        <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="search-text">Search</span>
      </button>
    </form>


      <!-- Right -->
      <div class="navbar-nav ms-auto text-center">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- âœ… Mobile Dropdown (Pushes Content Down) -->
<div class="collapse bg-white border-top shadow-sm d-md-none" id="mainNavCollapse">
  <div class="p-3 text-center">
    <!-- MOBILE SEARCH BAR -->
    <form class="d-flex align-items-center justify-content-center search-bar mb-3" role="search" action="/listings" method="GET">
      <input name="search" class="form-control search-input me-2" type="search" placeholder="Search destinations" value="<%= search || '' %>">
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="search-text">Search</span>
      </button>
    </form>


    <a class="d-block mb-2 text-decoration-none text-dark" href="/listings/new">Airbnb your home</a>
    <% if (!currUser) { %>
      <a class="d-block mb-2 text-decoration-none fw-bold text-dark" href="/signup">Sign up</a>
      <a class="d-block mb-2 text-decoration-none fw-bold text-dark" href="/login">Log in</a>
    <% } else { %>
      <a class="d-block mb-2 text-decoration-none fw-bold text-dark" href="/logout">Log out</a>
    <% } %>
  </div>
</div>
